{
  "$schema": "https://raw.githubusercontent.com/nicoverbruggen/tauri-settings-schema/v2/schema.json",
  "productName": "Telegram Korean Search",
  "version": "0.2.0",
  "identifier": "com.sskys18.telegram-korean-search",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "macOS": {
      "minimumSystemVersion": "12.0"
    }
  },
  "app": {
    "windows": [
      {
        "title": "텔레그램 한국어 검색",
        "width": 600,
        "height": 700,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
